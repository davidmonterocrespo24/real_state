<?xml version="1.0"?>
<odoo>
    <template id="custom_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div class="header">
            <div class="row">
                <div class="col-3 mb4">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
                    <b t-else=""><t t-esc="company.name"/></b>
                </div>
                <div class="col-6 text-center">
                    <t t-if='title_page'>
                        <b t-esc='title_page'/>
                    </t>
                </div>
                <div class="col-3">
                    <t t-if='title_page_extra'>
                        <b t-esc='title_page_extra'/>
                    </t><br/>
                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                </div>
            </div>
        </div>

        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0"/>
        </div>

        <div class="footer o_standard_footer"></div>
    </template>

    <template id='firma_footer_layout'>
        <div class="footer o_standard_footer">
            <div class="container">
                <div class="row justify-content-end">
                    <table>
                        <tr class="text-center" >
                            <t t-foreach="concepts" t-as="c">
                                <td class="pr-4">_______________________________</td>
                            </t>
                        </tr>
                        <tr class="text-center">
                            <t t-foreach="concepts" t-as="c">
                                <td class="pr-4">
                                    <t t-esc="c"/>
                                </td>
                            </t>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </template>
</odoo>
