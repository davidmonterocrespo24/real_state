<odoo>
    <data>

        <record model="ir.ui.view" id="payment_quota_tree">
            <field name="name">Payment Quota</field>
            <field name="model">payment.quota</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="contract_id"/>
                    <field name="property_id"/>
                    <field name="memo"/>
                    <field name="monto_divisa"/>
                    <field name="currency_payment_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="payment_quota_form">
            <field name="name">Payment Quota</field>
            <field name="model">payment.quota</field>
            <field name="arch" type="xml">
                <form>
                    <header>

                        <button name="action_done" states='draft' type='object' string='Validar'/>
                        <button name="action_cancel" states='done' type='object' string='Cancelar'/>
                        <button name="action_to_draft" states='cancel' type='object' string='Cambiar a Borrador'/>

                        <field name="state" widget='statusbar'/>
                    </header>

                    <group>
                        <group>
                            <h4 attrs="{'invisible':[('currency_id', '=', False)]}" colspan='2'>
                                <strong>Las cuotas estan en
                                    <field name="currency_id"/></strong>
                            </h4>
                            <field name="partner_id"/>
                            <field name="contract_id" domain="[('partner_id', '=', partner_id), ('state','=', 'validate')]" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>
                            <field name="property_id" readonly="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date" required="1"/>
                            <field name="monto_divisa" required="1"/>
                            <field name="currency_payment_id" required="1" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>
                            <field name="tasa" required="1"/>
                            <field name="journal_id" required="1" domain="[('type', 'in', ('cash', 'bank'))]" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}"/>

                            <field name="memo"/>
                            <field name="forma_pago" required="1"/>
                            <field name="date_transaction" attrs="{'invisible':[('forma_pago', 'not in', ['Deposito', 'Transferencia'])], 'required':[('forma_pago', 'in', ['Deposito', 'Transferencia'])]}"/>

                            <separator/>
                            <field name="amount"/>

                            <field name="monto_letra" invisible="1"/>
                            <field name="payment_id" attrs="{'invisible': [('payment_id', '=', False)]}"/>

                        </group>
                    </group>

                    <group>
                        <group col-span='4' string='Moras / Notarizaciones / Cargos Adici.'>
                            <field name='mora_ids' readonly='1' nolabel='1'>
                                <tree>
                                    <field name='pago_id' invisible='1'/>
                                    <field name='quota_id' invisible='1'/>
                                    <field name='name'/>
                                    <field name='date'/>
                                    <field name='currency_id' invisible='1'/>
                                    <field name='amount'/>
                                </tree>
                            </field>
                        </group>
                    </group>

                    <notebook>
                        <page string="Distribucion">
                            <group colspan="4">
                                <field name="quota_ids" nolabel="1" readonly="1">
                                    <tree editable="bottom">
                                        <field name="pago_id" invisible="1"/>
                                        <field name="quota_id" readonly="1"/>
                                        <field name="date_due" readonly="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="amount" sum="Total Quota"/>
                                        <field name="amount_paid" readonly="1"/>
                                        <field name="residual" readonly="1"/>
                                        <field name="to_pay" sum="Total a pagar"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </group>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="mora_total"/>
                                <field name="quota_total"/>
                                <field name="total" class="oe_subtotal_footer_separator"/>
                                <field name="residual" class="oe_subtotal_footer_separator" />
                            </group>
                        </page>
                    </notebook>

                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="payment_search_view">
            <field name="name">payment Seach</field>
            <field name="model">payment.quota</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="contract_id"/>

                    <separator/>

                    <filter name="draft" string="Borrador" domain="[('state','=','draft')]"/>
                    <filter name="validate" string="Validado" domain="[('state', '=', 'validate')]"/>
                    <filter name="done" string="Hecho" domain="[('state', '=', 'done')]"/>

                    <group expand="0" string="Group By">
                        <filter name="group_by_partner_id" string="Cliente" context="{'group_by':'partner_id'}"/>
                        <filter name="status" string="Estado" context="{'group_by':'state'}"/>
                        <filter string="Fecha" name="group_by_date" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="payment_quota_action_window">
            <field name="name">Pagos</field>
            <field name="res_model">payment.quota</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="payment_search_view"/>
        </record>

        <menuitem name="Pagos" id="menu_pagos" parent="account.menu_finance_receivables" action="payment_quota_action_window" sequence="10"/>

    </data>
</odoo>
