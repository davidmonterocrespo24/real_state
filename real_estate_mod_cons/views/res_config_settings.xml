<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.real.estate.mod.cons</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="msg_mod_cons" position="replace">
                <div class="content-group" attrs="{'invisible': [('module_real_estate_mod_cons', '=', False)]}">
                    <div class="mt16">
                        <button name="%(mod_cons_action_window)d" icon="fa-arrow-right" type="action"
                                string="Comodidades de las Propiedades" class="btn-link"/>
                        <button name="%(project_mod_cons_action_window)d" icon="fa-arrow-right" type="action"
                                string="Comodidades de los Projectos" class="btn-link"/>
                    </div>
                    <div class="mt16">
                        <button name="%(project_mod_cons_action_window)d" icon="fa-arrow-right" type="action"
                                string="Comodidades de los Projectos" class="btn-link"/>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>