<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="group_user_discount" model="res.groups">
      <field name="name">Real Estate: Menu Descuentos Aplicados</field>
      <field name="implied_ids" eval="[(4, ref('real_estate.group_user_discount'))]"/>
      <field name="comment">Puede ver el menu de los Descuento aplicados.
      </field>
    </record>

    <record id="descuentos_multi_company_rule" model="ir.rule">
        <field name="name">APlicacoin de Descuento multi-company</field>
        <field name="model_id" ref="model_real_estate_descuento"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

  </data>
</odoo>
